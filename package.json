{
  "name": "crystal-spec-vscode",
  "displayName": "Crystal Specs",
  "description": "Run crystal spec",
  "version": "0.1.0",
  "publisher": "matthewmcgarvey",
  "icon": "rspec.png",
  "galleryBanner": {
    "color": "#232323",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.19.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matthewmcgarvey/crystal-spec-vscode.git"
  },
  "homepage": "https://github.com/matthewmcgarvey/crystal-spec-vscode",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:crystalSpecs.runAllSpecFiles",
    "onCommand:crystalSpecs.runFileSpecs",
    "onCommand:crystalSpecs.runSpecsFromMenu",
    "onCommand:crystalSpecs.runSpecLine",
    "onCommand:crystalSpecs.runLastSpec"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "crystalSpecs.runAllSpecFiles",
        "title": "Crystal: Run All Spec Files"
      },
      {
        "command": "crystalSpecs.runFileSpecs",
        "title": "Crystal: Run File Specs",
        "when": "editorTextFocus && editorLangId == 'crystal'"
      },
      {
        "command": "crystalSpecs.runSpecsFromMenu",
        "title": "Crystal: Run Specs"
      },
      {
        "command": "crystalSpecs.runSpecLine",
        "title": "Crystal: Run Spec Line",
        "when": "editorTextFocus && editorLangId == 'crystal'"
      },
      {
        "command": "crystalSpecs.runLastSpec",
        "title": "Crystal: Run Last Spec"
      }
    ],
    "keybindings": [
      {
        "command": "crystalSpecs.runAllSpecFiles",
        "key": "ctrl+r",
        "mac": "cmd+r"
      },
      {
        "command": "crystalSpecs.runFileSpecs",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t"
      },
      {
        "command": "crystalSpecs.runSpecLine",
        "key": "ctrl+l",
        "mac": "cmd+l"
      },
      {
        "command": "crystalSpecs.runLastSpec",
        "key": "ctrl+y",
        "mac": "cmd+y"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.runSpecsFromMenu",
          "group": "spec"
        }
      ]
    },
    "configuration": {
      "title": "Crystal Spec Test Configurations",
      "properties": {
        "crystal.specCommand": {
          "type": "string",
          "default": "",
          "description": "Defines a custom command to run for specs"
        },
        "crystal.specFocusTerminal": {
          "type": "boolean",
          "default": true,
          "description": "Defines if it should focus on terminal on each spec run"
        },
        "crystal.specClearTerminal": {
          "type": "boolean",
          "default": true,
          "description": "Defines if it should clear the terminal on each spec run"
        },
        "crytal.specSaveFile": {
          "type": "boolean",
          "description": "Auto Save file before running spec test",
          "default": false
        }
      }
    }
  },
  "keywords": [
    "Crystal"
  ],
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test",
    "format": "prettier --config ./prettier.json --write './src/**/*.{ts,tsx}'",
    "format:check": "prettier --config ./prettier.json --list-different './src/**/*.{ts,tsx}'"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.1",
    "mocha": "^6.2.0",
    "@types/prettier": "^1.18.0",
    "prettier": "^1.18.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3",
    "typings": "^2.1.0",
    "vscode": "^1.1.0",
    "yarn": "^1.22.0"
  }
}
